import React, { useState } from 'react';

const activities = [
  { name: 'Exercise', selected: false },
  { name: 'Read a book', selected: false },
  { name: 'Cook a meal', selected: false },
  // Add more activities as needed
];

function ActivitySelectionPage() {
  const [selectedActivities, setSelectedActivities] = useState(activities);

  const handleActivityToggle = (index) => {
    setSelectedActivities((prevSelectedActivities) => {
      const updatedActivities = [...prevSelectedActivities];
      updatedActivities[index].selected = !updatedActivities[index].selected;
      return updatedActivities;
    });
  };

  return (
    <div>
      {selectedActivities.map((activity, index) => (
        <div key={index}>
          <input
            type="checkbox"
            checked={activity.selected}
            onChange={() => handleActivityToggle(index)}
          />
          <label>{activity.name}</label>
        </div>
      ))}
    </div>
  );
}

export default ActivitySelectionPage;
